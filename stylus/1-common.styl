//This is the primary global style sheet

@import 'nib'
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color #444
  color #DDDDDD
a
  color: #00B7FF

.done-text
  color: #44CC44

#ml
  height 130px

div.main-title
  position relative
  width 300px
  animation-name fade
  animation-duration .7s
  animation-timing-function ease-out
  animation-delay 0s

@keyframes fade 
  0%
    opacity 0.0
    left -10px
  100% 
    opacity 1.0
    left 0px

/* Resume Only! */
#resume-content
  .section
    float:left
    vertical-align top
    margin 5px
    padding 5px
    background-color #666

  #work-experience
    min-width 400px
    max-width 600px
  #education
    max-width 400px
  #languages
    max-width 200px
  #other-skills
    max-width 200px
/* End Resume */

/*This is Todo-Only!*/

#todo-content
  .todo input
    display none

  .todo .doneify
    display none

  td.button-cell
    min-width 85px

  .todo tr:nth-child({odd})
    background #555

  .g-signin
    display none

  #gConnect
    float right

  .authOps
    float right

  #error
    color #CC0000

  /* End Todo */
