//This is the primary global style sheet

@import 'nib'
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color #444
  color #DDDDDD
a
  color: #00B7FF

.done-text
  color: #44CC44

#content
  width 100%

#ml
  height 130px

div.main-title
  position relative
  width 300px
  animation-name fade
  animation-duration .7s
  animation-timing-function ease-out
  animation-delay 0s

@keyframes fade 
  0%
    opacity 0.0
    left -10px
  100% 
    opacity 1.0
    left 0px

