//This will be a side-navigation style format
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color #393939
  color #DDDDDD
a
  color: #00B7FF

.done-text
  color: #44CC44

#ml
  height 130px

div.main-title
  position relative
  width 300px
  -webkit-animation-name fade
  -webkit-animation-duration .7s
  -webkit-animation-timing-function ease-out
  -webkit-animation-delay 0s

@keyframes fade 
  0%
    opacity 0.0
    left -10px
  100% 
    opacity 1.0
    left 0px
