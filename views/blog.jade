extends layout

block headvars
  - var title = "Blog"
  script
    include fragments/gplus.js
    include fragments/blog.js

block content
  include fragments/gbutton.jade
  .content#blog-content
    div.main-title
      h1 #{title}
    p This will be the #{title}

    - for (var i in posts)
      .post
        h2 #{posts[i].title}
        h3 #{posts[i].created_at}
        p #{posts[i].body}
